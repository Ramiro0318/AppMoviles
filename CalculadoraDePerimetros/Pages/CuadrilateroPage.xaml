<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculadoraDePerimetros.Pages.CuadrilateroPage"
             xmlns:views="clr-namespace:CalculadoraDePerimetros.Pages"
             xmlns:vm="clr-namespace:CalculadoraDePerimetros.ViewModels"
             Title="Cuadrilatero">
    <VerticalStackLayout HorizontalOptions="Fill" MaximumWidthRequest="700" Spacing="10" Margin="10">
        <Grid ColumnDefinitions="auto, *" RowDefinitions="*, auto" HorizontalOptions="Center" VerticalOptions="Center" ColumnSpacing="10" RowSpacing="10">
            <Label Grid.Column="0" Grid.Row="0" VerticalOptions="Center">a</Label>
            <Rectangle Grid.Column="1" Grid.Row="0" WidthRequest="150" HeightRequest="100" Background="CornflowerBlue"></Rectangle>
            <Label Grid.Column="1" Grid.Row="1" HorizontalOptions="Center">b</Label>
        </Grid>
        <Label>a</Label>
        <Entry Text="{Binding Cuadrilatero.Lado1}" Keyboard="Numeric"></Entry>
        <Label>b</Label>
        <Entry Text="{Binding Cuadrilatero.Lado2}" Keyboard="Numeric"></Entry>

        <Label Text="{Binding MensajeError}" TextColor="Red" FontSize="Small" HorizontalOptions="Center"></Label>

        <Button Command="{Binding CalcularCommand}" CommandParameter="cuadrilatero" HorizontalOptions="Center" Padding="0 25" Text="Calcular"></Button>
    </VerticalStackLayout>
</ContentPage>