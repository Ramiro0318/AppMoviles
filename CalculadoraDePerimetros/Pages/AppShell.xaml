<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CalculadoraDePerimetros.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CalculadoraDePerimetros"
    xmlns:views="clr-namespace:CalculadoraDePerimetros.Pages"
    xmlns:vm="clr-namespace:CalculadoraDePerimetros.ViewModels"
    Title="CalculadoraDePerimetros">

    <Shell.BindingContext>
        <vm:PerimetrosViewModel></vm:PerimetrosViewModel>
    </Shell.BindingContext>
    
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    

</Shell>
