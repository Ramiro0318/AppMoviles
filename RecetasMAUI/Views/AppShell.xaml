<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RecetasMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RecetasMAUI" BackgroundColor="#5520F0" Shell.TitleColor="AliceBlue"
    xmlns:vm="clr-namespace:RecetasMAUI.ViewModels"
    xmlns:views="clr-namespace:RecetasMAUI.Views"
    Title="RecetasMAUI">

    <Shell.BindingContext>
        <vm:RecetasViewModel></vm:RecetasViewModel>
    </Shell.BindingContext>

    <ShellContent ContentTemplate="{DataTemplate views:MenuRecetasPage}"></ShellContent>
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
